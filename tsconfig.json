{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "jsx": "react-native",
    "target": "ES5",
    "module": "ES2020", // Use an ES module format
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "examples"],
  "exclude": ["node_modules", "examples", "scripts", "tests", "dist"]
}
